       GeglRect *dest_rect,
       GeglRect *src_rect)
  {
    GeglColorConvertToRgbFloatOp * self = 
       GEGL_COLOR_CONVERT_TO_RGB_FLOAT_OP (GET_NEW);

    /*Call the constructor */
    if (!constructor(self, dest, src, dest_rect, src_rect))
      return NULL;
    
    /*Okay its constructed*/
    GEGL_OBJECT(self)->constructed = TRUE;

    return self;
  }

  protected 
  gboolean 
