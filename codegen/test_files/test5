    Chan *dest_data[3], *src1_data[3], *src2_data[4]; 
    VectorChan *dest(_c_); 
    VectorChan *src1(_c_);
    VectorChan *src2(_c_,_a_);
    gfloat a, b, alpha;
    guint width;

/*codegen_copy
