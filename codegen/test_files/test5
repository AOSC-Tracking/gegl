    dest = dest_data;
 
    src1 = src2_data;

    src2 = src2_data;

/*codegen_copy
    switch(self->_priv->comp_mode)
codegen_copy*/
      {
      case COMPOSITE_REPLACE:
      case COMPOSITE_OVER:
      case COMPOSITE_IN:
      case COMPOSITE_ATOP:
       while (width--)
         {
           *dest_r++ = *src2_r++;
          }
       break;
      case COMPOSITE_OUT:
      case COMPOSITE_XOR:
       while (width--)
         {
           *dest_c++ = *src1_c++;
         }
       break;
      default:
       break;
      }       
