	gint dest_has_alpha; 
	gint src1_has_alpha; 
	gint src2_has_alpha;
	VectorChan dest(_c_,_a_);
	VectorChan src1(_c_,_a_);
	VectorChan src2(_c_,_a_);

        dest_c = MIN(src1_c, src2_c);
        if (dest_has_alpha)
          {
            if (src1_has_alpha && src2_has_alpha)
              dest_a = MIN(src1_a, src2_a);
            else if (src1_has_alpha)
              dest_a = src1;
            else if (src2_has_alpha)
              dest_a = src2; 
          }


        VectorChan src(_c_,_a_);

        if (src_a == ZERO_CHAN || src_a == WP)
          {
            dest_c = src_c;
          }
        else
          {
            dest = src / src_a;
          }
        dest_a = src_a;


        if (src_a == ZERO_CHAN || src_a == WP)
          {
            dest_c = src_c;
          }
        else
          {
            dest_c = src_c / src_a_c;
          }
        dest_a = src_a;


