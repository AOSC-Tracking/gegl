<!-- Dropshadow implemented without using the meta-op
     using a <dropshadow> node directly would be quite
     a bit more efficient.
  -->

<gegl>
  <crop x     ='80'
        y     ='60'
        width ='360'
        height='320'/>
 <over>
    <shift x='100.0'
           y='100.0'/>
    <under>
      <opacity value='1.0'/>
      <box-blur radius='16.0'/>
      <shift x='16.0'
             y='16.0'/>
      <in>
         <color value='rgb(0.0,0.0,0.0)'/>
      </in>
      <clone ref='gegl'/>
    </under>
    <load path='data/gegl.png'
          id  ='gegl'/>
  </over>
  <load path='data/vinci-fly3.jpg'/>
</gegl>
